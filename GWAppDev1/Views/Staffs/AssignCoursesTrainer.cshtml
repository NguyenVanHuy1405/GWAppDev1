@model GWAppDev1.ViewModels.CoursesTrainersViewModel
@{
    ViewBag.Title = "AssignCoursesTrainer";
}

<h2>Assign Courses Trainer</h2>
<div class="form-group">
    <label>Courses</label>
    @Html.DropDownListFor(
      m => m.CourseId,
      new SelectList(Model.Courses, "Id", "CourseName"),
      new { @class = "form-control" }
    )
</div>
<div class="form-group">
    <label>Team</label>
    @Html.DropDownListFor(
      m => m.UserId,
      new SelectList(Model.Users, "Id", "Email"),
      new { @class = "form-control" }
    )
    @Html.ValidationMessage("duplicate", new { @class = "text-danger" })
</div>
<button type="submit" class="btn btn-primary">Assign</button>
